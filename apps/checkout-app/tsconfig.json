{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["frontend/*"],
      "@backend/*": ["backend/*"],
      "@graphql": ["graphql"],
      "@graphql/*": ["graphql/*"],
      "@utils": ["utils.ts"],
      "@constants": ["constants.ts"]
    },
    "strict": true,
    "noEmit": true,
    "declaration": false, // Fixes "inferred type cannot be named without a reference to ..." errors
    "declarationMap": false // Fixes "inferred type cannot be named without a reference to ..." errors
  },
  "extends": "../../packages/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
